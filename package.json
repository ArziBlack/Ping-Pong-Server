{
  "name": "ping-pong-multiplayer",
  "version": "1.0.0",
  "description": "A real-time multiplayer ping pong game",
  "main": "dist/server.js",
  "scripts": {
    "build": "npm run build:server && npm run build:client",
    "build:server": "tsc",
    "build:client": "tsc -p tsconfig.client.json",
    "start": "node dist/server.js",
    "dev": "npm run build && npm start",
    "watch:server": "tsc --watch",
    "watch:client": "tsc -p tsconfig.client.json --watch"
  },
  "keywords": ["ping-pong", "multiplayer", "game", "socket.io"],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "socket.io": "^4.6.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0"
  },
  "optionalDependencies": {
    "socket.io-client": "^4.6.1"
  }
}
